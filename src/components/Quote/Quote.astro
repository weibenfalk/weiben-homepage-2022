---
const min = -5;
const max = 10;

const randomDegree = Math.floor(Math.random() * max + min);
const degree: string = randomDegree + 'deg';
---

<article>
  <slot />
</article>

<style define:vars={{ degree }}>
  article {
    font-family: 'Reenie Beanie', cursive;
    font-size: 1.5rem;
    text-align: center;
    max-width: 800px;
    margin: 40px auto;
    transform: rotate(var(--degree));
  }
</style>
