---
import ModeButton from '../ModeButton/ModeButton.astro';
---

<nav>
  <ul>
    <input type='checkbox' id='checkbox_toggle' />
    <label for='checkbox_toggle' class='hamburger'>&#9776;</label>
    <div class='menu'>
      <li><a href='/'>Hem</a></li>
      <li><a href='/om'>Om Weibenfalk</a></li>
      <li><a href='/musik'>Texter & Ackord</a></li>
      <li><a href='/spelningar'>Spelningar</a></li>
      <li><a href='/media'>Bilder & Media</a></li>
      <li><a href='/kontakt'>Kontakt</a></li>
      <div class='mode-btn'>
        <ModeButton />
      </div>
    </div>
  </ul>
</nav>

<style>
  * {
    font-weight: 600;
    text-decoration: none;
  }

  a {
		font-weight: 800;
		color: var(--color-text-light);
		text-decoration: none;
	}

	html.dark a {
		color: var(--color-text-dark);
	}

  .mode-btn {
    position: absolute;
    top: 48px;
    right: 30px;
  }

  ul {
    display: flex;
  }

  li {
    list-style: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    color: #fff;
  }

  .menu {
    display: flex;
    align-items: center;
    gap: 1em;
    font-size: 18px;
  }

  .menu a:hover {
    transition: 0.2s ease;
    opacity: 0.5;
  }

  .menu li {
    padding: 5px 14px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  input[type='checkbox'] {
    display: none;
  }

  .hamburger {
    display: none;
    font-size: 24px;
    user-select: none;
    z-index: 100;
  }

  @media (max-width: 768px) {
    .menu {
      display: none;
      position: fixed;
      background: var(--color-gradient);
      top: 0;
      right: 0;
      left: 0;
      height: 100%;
      z-index: 10;
      text-align: center;
      padding-top: 120px;
    }

    .menu li:hover {
      display: inline-block;
      opacity: 0.8;
      transition: 0.3s ease;
    }

    .menu li + li {
      margin-top: 12px;
    }

    input[type='checkbox']:checked ~ .menu {
      display: block;
    }

    .hamburger {
      position: fixed;
      right: 40px;
      top: 58px;
      display: block;
      font-size: 40px;
      cursor: pointer;
    } 

    .mode-btn {
      position: absolute;
      top: 48px;
      right: 100px;
      display: none;
    }
  }
</style>
